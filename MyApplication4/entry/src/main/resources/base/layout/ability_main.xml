<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:background_element="$media:login_background"
    >
    <Image
        ohos:image_src="$media:login_background"
        />

    <Text
        ohos:id="$+id:tittle"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:text_size="30vp"
        ohos:text_color="#C35A3E3E"
        ohos:text="cosplay服装选购系统"
        ohos:text_alignment="center"

        />

    <TextField
        ohos:id="$+id:num"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#FFFFFF"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="30vp"
        ohos:hint="请输入手机号"
        ohos:hint_color="#999999"
        ohos:text_size="17fp"
        ohos:text_alignment="center"/>
    <TextField
        ohos:id="$+id:pwd"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#FFFFFF"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:hint="请输入密码"
        ohos:hint_color="#999999"
        ohos:text_size="17fp"
        ohos:text_alignment="center"
        ohos:text_input_type="pattern_password"/>
    <Button
        ohos:id="$+id:loginBtn"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#21A8FD"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="20vp"
        ohos:text="登录"
        ohos:text_size="24fp"
        ohos:text_color="#FFFFFF"
        ohos:text_alignment="center"
        />
    <Button
        ohos:id="$+id:registerBtn"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#21A8FD"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="20vp"
        ohos:text="注册"
        ohos:text_size="24fp"
        ohos:text_color="#FFFFFF"/>
</DirectionalLayout>