<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:weight="1"
        ohos:orientation="vertical"
        ohos:background_element="$media:self_background">

        <Image
            ohos:id="$+id:user_img"
            ohos:height="200vp"
            ohos:width="200vp"

            ohos:scale_mode="zoom_center"
            ohos:layout_alignment="center"
            ohos:margin="5vp"
            ohos:image_src="$media:icon"/>

        <Text
            ohos:id="$+id:user_name"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:text_color="#000000"
            ohos:text_size="40vp"
            ohos:text_alignment="left"
            ohos:text="用户名：CST21070"
            ohos:top_margin="80vp"

            />
    </DirectionalLayout>
        <DirectionalLayout
            ohos:height="100vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            >
            <Button
                ohos:id="$+id:homePageBtn1"
                ohos:height="70vp"
                ohos:width="0"
                ohos:weight="1"
                ohos:text="首页"
                ohos:background_element="#21A8FD"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="24fp"
                ohos:text_color="#FFFFFF"
                ohos:text_alignment="center"
                ohos:margin="5vp"/>
            <Button
                ohos:id="$+id:cartBtn2"
                ohos:height="70vp"
                ohos:width="0"
                ohos:weight="1"
                ohos:text="购物车"
                ohos:background_element="#21A8FD"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="24fp"
                ohos:text_color="#FFFFFF"
                ohos:text_alignment="center"
                ohos:margin="5vp"/>
            <Button
                ohos:id="$+id:selfBtn3"
                ohos:height="70vp"
                ohos:width="0"
                ohos:weight="1"
                ohos:text="个人"
                ohos:background_element="#21A8FD"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="24fp"
                ohos:text_color="#FFFFFF"
                ohos:text_alignment="center"
                ohos:margin="5vp"/>
        </DirectionalLayout>


</DirectionalLayout>