<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#F2F2F2">
    <TextField
        ohos:id="$+id:num_r"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#FFFFFF"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="100vp"
        ohos:hint="请输入手机号"
        ohos:hint_color="#999999"
        ohos:text_size="17fp"
        ohos:text_alignment="center"/>
    <TextField
        ohos:id="$+id:name_r"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#FFFFFF"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:hint="请输入用户名"
        ohos:hint_color="#999999"
        ohos:text_size="17fp"
        ohos:text_alignment="center"/>
    <TextField
        ohos:id="$+id:pwd_r"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#FFFFFF"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:hint="请输入密码"
        ohos:hint_color="#999999"
        ohos:text_size="17fp"
        ohos:text_alignment="center"
        />
    <Button
        ohos:id="$+id:register"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#21A8FD"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="20vp"
        ohos:text="注册"
        ohos:text_size="24fp"
        ohos:text_color="#FFFFFF"
        ohos:text_alignment="center"
        />
    <Button
        ohos:id="$+id:back_login"
        ohos:height="50vp"
        ohos:width="320vp"
        ohos:background_element="#21A8FD"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="20vp"
        ohos:text="返回登录界面"
        ohos:text_size="24fp"
        ohos:text_color="#FFFFFF"
        ohos:text_alignment="center"
        />
</DirectionalLayout>