<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <TextField
            ohos:id="$+id:searchText"
            ohos:height="70vp"
            ohos:width="280vp"
            ohos:background_element="#FFFFFF"
            ohos:layout_alignment="horizontal_center"
            ohos:margin="5vp"
            ohos:hint="搜索想要的商品"
            ohos:hint_color="#999999"
            ohos:text_size="17fp"
            ohos:text_alignment="center"/>
        <Button
            ohos:id="$+id:searchBtn"
            ohos:height="70vp"
            ohos:width="match_content"
            ohos:text="搜索"
            ohos:background_element="#21A8FD"
            ohos:layout_alignment="horizontal_center"
            ohos:text_size="24fp"
            ohos:text_color="#FFFFFF"
            ohos:text_alignment="center"
            ohos:margin="5vp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:weight="1"
        ohos:orientation="vertical">
        <PageSlider
            ohos:id="$+id:page_slider"
            ohos:height="300vp"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center"/>
        <ListContainer
            ohos:id="$+id:lc1"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:margin="5vp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="120vp"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:homePageBtn1"
            ohos:height="70vp"
            ohos:width="0"
            ohos:weight="1"
            ohos:text="首页"
            ohos:background_element="#21A8FD"
            ohos:layout_alignment="horizontal_center"
            ohos:text_size="24fp"
            ohos:text_color="#FFFFFF"
            ohos:text_alignment="center"
            ohos:margin="5vp"/>
        <Button
            ohos:id="$+id:cartBtn2"
            ohos:height="70vp"
            ohos:width="0"
            ohos:weight="1"
            ohos:text="购物车"
            ohos:background_element="#21A8FD"
            ohos:layout_alignment="horizontal_center"
            ohos:text_size="24fp"
            ohos:text_color="#FFFFFF"
            ohos:text_alignment="center"
            ohos:margin="5vp"/>
        <Button
            ohos:id="$+id:selfBtn3"
            ohos:height="70vp"
            ohos:width="0"
            ohos:weight="1"
            ohos:text="个人"
            ohos:background_element="#21A8FD"
            ohos:layout_alignment="horizontal_center"
            ohos:text_size="24fp"
            ohos:text_color="#FFFFFF"
            ohos:text_alignment="center"
            ohos:margin="5vp"/>
    </DirectionalLayout>

</DirectionalLayout>
